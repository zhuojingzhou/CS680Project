<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myTableLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0033cc" >

    <!-- Image Header (Bentley Falcon) -->

    <TableRow
        android:gravity="center"
        android:paddingTop="10px" >

        <ImageView
            android:id="@+id/imageHeaderSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

    <!-- Professor Image (left) and Professor Name (right) -->

    <TableRow android:layout_marginTop="10dip" >

        <ImageView
            android:id="@+id/imageProfessorSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left" />

        <TextView
            android:id="@+id/txtProfNameSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Prof. Name"
            android:textColor="#FF00FF00"
            android:textSize="18sp"
            android:textStyle="italic"
            android:typeface="serif" >
        </TextView>
    </TableRow>

    <!-- Professor Profile -->

    <TableRow android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/txtProfProfileSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brief introduction of Prof......"
            android:textColor="#FF00FF00"
            android:textSize="18sp"
            android:textStyle="italic"
            android:typeface="serif" >
        </TextView>
    </TableRow>

    <!-- Overal Quality -->

    <TableRow android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/txtOverallQualitySearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="* Overall Quality"
            android:textColor="#FF00FF00"
            android:textSize="18sp"
            android:textStyle="italic"
            android:typeface="serif" >
        </TextView>

        <EditText
            android:id="@+id/txtOverallQualitySearchEnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FF00FF00"
            android:textSize="18sp"
            android:textStyle="italic"
            android:typeface="serif" >
        </EditText>
    </TableRow>

    <!-- Helpfulness -->

    <TableRow android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/txtHelpfulnessSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="* Overall Quality"
            android:textColor="#FF00FF00"
            android:textSize="18sp"
            android:textStyle="italic"
            android:typeface="serif" >
        </TextView>

        <EditText
            android:id="@+id/txthelpfulnessSearchEnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FF00FF00"
            android:textSize="18sp"
            android:textStyle="italic"
            android:typeface="serif" >
        </EditText>
    </TableRow>

    <!-- Clarity -->

    <TableRow android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/txtClaritySearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="* Overall Quality"
            android:textColor="#FF00FF00"
            android:textSize="18sp"
            android:textStyle="italic"
            android:typeface="serif" >
        </TextView>

        <EditText
            android:id="@+id/txtClaritySearchEnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FF00FF00"
            android:textSize="18sp"
            android:textStyle="italic"
            android:typeface="serif" >
        </EditText>
    </TableRow>

    <!-- Comments -->

    <TableRow android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/txtCommentsSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMMENTS"
            android:textColor="#FF00FF00"
            android:textSize="18sp"
            android:textStyle="italic"
            android:typeface="serif" >
        </TextView>
    </TableRow>

    <!-- Comment 1 -->

    <TableRow android:layout_marginTop="10dip" >

        <EditText
            android:id="@+id/txtComment1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMMENT 1..."
            android:textColor="#FF00FF00"
            android:textSize="18sp"
            android:textStyle="italic"
            android:typeface="serif" >
        </EditText>
    </TableRow>

    <!-- Comment 2 -->

    <TableRow android:layout_marginTop="10dip" >

        <EditText
            android:id="@+id/txtComment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMMENT 2..."
            android:textColor="#FF00FF00"
            android:textSize="18sp"
            android:textStyle="italic"
            android:typeface="serif" >
        </EditText>
    </TableRow>

    <!-- Comment 3 -->

    <TableRow android:layout_marginTop="10dip" >

        <EditText
            android:id="@+id/txtComment3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMMENT 3..."
            android:textColor="#FF00FF00"
            android:textSize="18sp"
            android:textStyle="italic"
            android:typeface="serif" >
        </EditText>
    </TableRow>

</TableLayout>